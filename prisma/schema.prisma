// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  phone         String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // OAuth providers
  accounts      Account[]
  sessions      Session[]
  
  // Membership
  isMember      Boolean   @default(false)
  memberSince   DateTime?
  
  // Moderation
  isBanned      Boolean   @default(false)
  banReason     String?
  bannedAt      DateTime?
  reports       Report[]  @relation("ReportedBy")
  reported      Report[]  @relation("ReportedUser")
  
  // User content
  listings      Listing[]
  trades        Trade[]   @relation("TradeInitiator")
  tradesReceived Trade[]  @relation("TradeReceiver")
  donations     Donation[]
  reviewsGiven  Review[]  @relation("Reviewer")
  reviewsReceived Review[] @relation("Reviewed")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Card {
  id              String   @id @default(cuid())
  name            String
  playerName      String
  brand           String   // Panini, Topps, etc.
  set             String
  league          String   // Premier League, La Liga, etc.
  competition     String?  // World Cup, Champions League, etc.
  year            Int
  cardType        String   // base, numbered, signature
  cardNumber      String?  // For numbered cards
  isSignature     Boolean  @default(false)
  imageUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  listings        Listing[]
  priceHistory    PriceHistory[]
}


model PriceHistory {
  id            String   @id @default(cuid())
  cardId        String
  source        String   // "ebay", "internal"
  price         Float
  date          DateTime @default(now())
  
  card          Card     @relation(fields: [cardId], references: [id])
}

model Trade {
  id              String   @id @default(cuid())
  initiatorId     String
  receiverId      String
  initiatorCardId String
  receiverCardId  String?
  status          String   // pending, accepted, rejected, completed, cancelled
  deliveryAddress String?
  trackingNumber  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  initiator       User     @relation("TradeInitiator", fields: [initiatorId], references: [id])
  receiver        User     @relation("TradeReceiver", fields: [receiverId], references: [id])
  initiatorCard   Listing  @relation("InitiatorCard", fields: [initiatorCardId], references: [id])
  receiverCard    Listing? @relation("ReceiverCard", fields: [receiverCardId], references: [id])
}

model Listing {
  id            String   @id @default(cuid())
  cardId        String
  userId        String
  title         String
  description   String?
  price         Float
  condition     String   // Mint, Near Mint, Good, etc.
  imageUrl      String?
  isActive      Boolean  @default(true)
  isBestSeller  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  card          Card     @relation(fields: [cardId], references: [id])
  user          User     @relation(fields: [userId], references: [id])
  
  trades        Trade[]  @relation("InitiatorCard")
  tradesReceived Trade[] @relation("ReceiverCard")
}

model Donation {
  id            String   @id @default(cuid())
  userId        String
  type          String   // "money", "card"
  amount        Float?
  cardId        String?
  message       String?
  createdAt     DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id])
}

model Review {
  id            String   @id @default(cuid())
  userId        String
  targetUserId  String
  rating        Int      // 1-5
  comment       String?
  createdAt     DateTime @default(now())
  
  user          User     @relation("Reviewer", fields: [userId], references: [id])
  targetUser    User     @relation("Reviewed", fields: [targetUserId], references: [id])
}

model Report {
  id            String   @id @default(cuid())
  reportedById  String
  reportedUserId String
  reason        String
  description   String?
  status        String   @default("pending") // pending, reviewed, resolved
  createdAt     DateTime @default(now())
  
  reportedBy    User     @relation("ReportedBy", fields: [reportedById], references: [id])
  reportedUser  User     @relation("ReportedUser", fields: [reportedUserId], references: [id])
}

